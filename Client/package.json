{
  "name": "foodchooserangular2",
  "version": "1.0.0",
  "scripts": {
    "start": "tsc && webpack-dev-server --env=dev --hot --open",
    "lite": "lite-server --config=config/lite-prod-config.json",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "test": "karma start karma.conf.js",
    "lint": "tslint ./app/**/*.ts -t verbose",
    "build-dev": "webpack --env=dev",
    "build-prod": "webpack --env=prod",
    "build-web": "npm run build-prod",
    "prepare-desktop": "mkdirp ./.temp/electron && ncp assets/electron .temp/electron/ && ncp .dist/web/aot .temp/electron/ && rimraf .dist/desktop/",
    "build-desktop": "npm run prepare-desktop && electron-packager .temp/electron/ --electronVersion=1.4.15 --platform=win32,linux --out=./.dist/desktop/ && npm run cleanup",
    "prepare-mobile": "rimraf ./.temp/mobile && mkdirp ./.temp/mobile/www && mkdirp ./.temp/mobile/www/img && ncp assets/cordova .temp/mobile/ && ncp .dist/web/aot .temp/mobile/www && ncp img .temp/mobile/www/img && rimraf .dist/mobile/ && trash .temp/mobile/www/**/*.js.gz",
    "build-mobile-windows": "mkdirp .dist/mobile/windows && cd .temp/mobile && cordova platform add windows && cordova build windows && cd ../.. && ncp .temp/mobile/platforms/windows .dist/mobile/windows",
    "build-mobile-android": "mkdirp .dist/mobile/android && cd .temp/mobile && cordova platform add android && cordova build android && cd ../.. && ncp .temp/mobile/platforms/android .dist/mobile/android",
    "build-mobile": "npm run prepare-mobile && npm run build-mobile-windows && npm run build-mobile-android && npm run cleanup",
    "build-all": "rimraf .dist && npm run build-web && npm run build-desktop && npm run build-mobile && npm run cleanup",
    "cleanup": "rimraf .temp"
  },
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "^5.0.0",
    "@angular/common": "~5.0.0",
    "@angular/compiler": "~5.0.0",
    "@angular/compiler-cli": "~5.0.0",
    "@angular/core": "~5.0.0",
    "@angular/forms": "~5.0.0",
    "@angular/http": "~5.0.0",
    "@angular/platform-browser": "~5.0.0",
    "@angular/platform-browser-dynamic": "~5.0.0",
    "@angular/platform-server": "~5.0.0",
    "@angular/router": "~5.0.0",
    "@angular/upgrade": "~5.0.0",
    "bootstrap": "^3.3.7",
    "core-js": "2.5.1",
    "ie-shim": "~0.1.0",
    "jquery": "^3.2.1",
    "reflect-metadata": "0.1.10",
    "rxjs": "5.5.2",
    "zone.js": "0.8.18"
  },
  "devDependencies": {
    "@ngtools/webpack": "^1.8.0",
    "@types/jasmine": "^2.6.2",
    "@types/node": "8.0.47",
    "@types/selenium-webdriver": "^3.0.8",
    "angular-router-loader": "^0.6.0",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.3.0",
    "canonical-path": "0.0.2",
    "clean-webpack-plugin": "^0.1.17",
    "compression-webpack-plugin": "^1.0.1",
    "concurrently": "^3.5.0",
    "copy-webpack-plugin": "^4.2.0",
    "css-loader": "^0.28.7",
    "electron-packager": "^9.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "favicons-webpack-plugin": "0.0.7",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "json-loader": "^0.5.7",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^4.13.1",
    "null-loader": "^0.1.1",
    "path": "^0.12.7",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.19.0",
    "trash-cli": "^1.4.0",
    "ts-helpers": "^1.1.2",
    "ts-loader": "^3.1.1",
    "tslint": "^5.8.0",
    "tslint-loader": "^3.5.3",
    "typescript": "2.6.1",
    "url-loader": "^0.6.2",
    "webdriver-manager": "12.0.6",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "2.9.4",
    "webpack-stream": "^4.0.0"
  }
}
